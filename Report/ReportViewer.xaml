<Window x:Class="Report.ReportViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Viewer" Height="562" Width="943" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="477*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        
        <Border BorderThickness="2" BorderBrush="SteelBlue" Background="SteelBlue" CornerRadius="7,7,7,7" Grid.Row="0" Grid.RowSpan="3"/>
        <Label Content="Report Name" Height="28" Name="lblTitle" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Foreground="White" FontSize="16" FontWeight="Bold" FontFamily="Times New Roman" Margin="5,5,5,5" />
        <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White" Margin="2,0,2,0">

        </StackPanel>
    </Grid>
</Window>
